<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="vertical"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/tishibankdialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:lines="5"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="银行预留手机号是您在办理该银行卡时所填写的手机号。如果没有预留、忘记或停用手机号码，请联系银行客服更新处理。"
            android:textSize="14sp" />

        
        <TextView
            android:id="@+id/tishibankdialog_lin"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="10dip"
            android:layout_below="@id/tishibankdialog_title"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tishibankdialog_now"
            android:layout_below="@id/tishibankdialog_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="#4849AA"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>