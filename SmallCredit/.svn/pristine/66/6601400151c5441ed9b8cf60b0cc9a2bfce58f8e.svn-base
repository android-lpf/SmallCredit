<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mybill_item_paydetail_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/mybill_item_paydetail_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/mybill_item_paydetail_backtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dip"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="还款明细"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/mybill_item_paydetail_listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/mybill_item_paydetail_relative"
        android:layout_margin="10dp"
        android:background="@drawable/my_break_line"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>