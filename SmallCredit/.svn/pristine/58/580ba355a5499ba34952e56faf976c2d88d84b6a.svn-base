<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gou_item_rela1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/gou_item_rela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_up" >

        <TextView
            android:id="@+id/gou_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="\t小信用为您推荐"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gou_item_rela3"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/gou_item_rela2"
        android:background="@color/blue_down" >

        <ImageView
            android:id="@+id/gou_item_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="20dip"
            android:background="@drawable/gouwu"
            android:paddingBottom="5dip" />

        <TextView
            android:id="@+id/gou_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/gou_item_imageview"
            android:layout_toRightOf="@id/gou_item_imageview"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="来分期"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gou_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/gou_item_imageview"
            android:layout_alignLeft="@id/gou_item_name"
            android:layout_below="@id/gou_item_name"
            android:layout_toRightOf="@id/gou_item_imageview"
            android:text="互联网白领分期平台"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/gou_item_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/gou_item_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/enter_arrow" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/gou_item_showimg"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/tuijian" />

</RelativeLayout>