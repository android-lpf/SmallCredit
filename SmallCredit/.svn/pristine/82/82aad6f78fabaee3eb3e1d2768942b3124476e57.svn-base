<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_group_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/more_realtivetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/more_imgback"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:padding="10dip" />
<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:id="@+id/more_backtext"
	    android:layout_marginLeft="29dip"
	    android:layout_centerVertical="true"
	    android:textColor="@android:color/white"
	    />
        <TextView
            android:id="@+id/housecredit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="更多"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <!-- 1 -->

    <RelativeLayout
        android:id="@+id/more_realtive1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_realtivetitle"
        android:background="@drawable/my_group_break_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/more_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/bullet_navi_current"
            android:drawablePadding="5dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="修改登录密码"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <ImageView
            style="@style/my_set_front_imageview"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/more_approve"
            android:background="@drawable/my_break_line" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/my_break_line" />

    <!-- 2 -->

    <RelativeLayout
        android:id="@+id/more_realtive2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_realtive1"
        android:background="@drawable/my_group_break_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/more_jiaoyipwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/bullet_navi_current"
            android:drawablePadding="5dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="修改交易密码"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <ImageView
            style="@style/my_set_front_imageview"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/more_jiaoyipwd"
            android:background="@drawable/my_break_line" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/my_break_line" />

    <!-- 3 -->

    <RelativeLayout
        android:id="@+id/more_realtive3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_realtive2"
        android:layout_marginBottom="2sp"
        android:background="@drawable/my_group_break_line"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/bullet_navi_current"
            android:drawablePadding="5dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="修改手势密码"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <ImageView
            style="@style/my_set_front_imageview"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/more_line"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/more_realtive3"
        android:background="@drawable/my_break_line" />

    <RelativeLayout
        android:id="@+id/more_realtive4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_line"
        android:background="@drawable/my_group_break_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/more_fankui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/bullet_navi_current"
            android:drawablePadding="5dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="建议反馈"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <ImageView
            style="@style/my_set_front_imageview"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/more_fankui"
            android:background="@drawable/my_break_line" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/my_break_line" />

    <!-- 4 -->

    <RelativeLayout
        android:id="@+id/more_realtive5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_realtive4"
        android:layout_marginBottom="2sp"
        android:background="@drawable/my_group_break_line"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/more_aboutcredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/bullet_navi_current"
            android:drawablePadding="5dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="关于小信用"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <ImageView
            style="@style/my_set_front_imageview"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/more_aboutcredit"
            android:background="@drawable/my_break_line" />
    </RelativeLayout>

    <Button
        android:id="@+id/more_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/start_round_sel"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/color_selector_break" />

</RelativeLayout>