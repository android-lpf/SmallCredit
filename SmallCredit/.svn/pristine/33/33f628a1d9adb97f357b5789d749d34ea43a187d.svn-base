<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/second_item_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3686b9" >

        <TextView
            android:id="@+id/second_item_compayname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="\t中智诚信用分"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_item_showRela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_down"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/second_item_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView1"
            android:layout_alignBottom="@id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="719"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/second_item_tigong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@id/second_item_score"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="由蚂蚁金服提供"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/second_item_state"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/second_item_tigong"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/second_item_score"
            android:background="@drawable/select_fragment_cheng"
            android:gravity="center"
            android:text="首次"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/second_item_gridetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/second_item_tigong"
            android:layout_below="@id/second_item_tigong"
            android:paddingBottom="10dp"
            android:text="信用等级："
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/second_item_gride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/second_item_gridetxt"
            android:layout_alignBottom="@id/second_item_gridetxt"
            android:layout_toRightOf="@id/second_item_gridetxt"
            android:text="高"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/second_item_timetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_item_gridetxt"
            android:layout_toLeftOf="@id/second_item_gride"
            android:text="查询时间："
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/second_item_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/second_item_timetxt"
            android:layout_alignBottom="@id/second_item_timetxt"
            android:layout_toRightOf="@id/second_item_timetxt"
            android:paddingBottom="10dp"
            android:text="2015-06-13"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/second_item_frontbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/enter_arrow" />
    </RelativeLayout>
    <!-- 信用分为0时，暂无收录 -->

    <RelativeLayout
        android:id="@+id/second_item_showRela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3f9dd9"
        android:paddingBottom="20dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/second_item_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView1"
            android:layout_alignBottom="@id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/second_wushouru" >
        </ImageView>

        <TextView
            android:id="@+id/second_item_tigong1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/second_item_img1"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="暂无收录"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_item_showRela2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingBottom="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="敬请期待。。。"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>