<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/mysecurepaymentrecharge_failresult_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="充值结果"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mysecurepaymentrecharge_failresult_because"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/relativeLayout1"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="失败原因"
        android:textColor="@color/color_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mysecurepaymentrecharge_failresult_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mysecurepaymentrecharge_failresult_because"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        android:text="账户余额不足"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mysecurepaymentrecharge_failresult_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mysecurepaymentrecharge_failresult_price"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:text="错误编码：E0001"
        android:textColor="@color/color_white"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mysecurepaymentrecharge_failresult_error"
        android:background="@drawable/my_group_break_line" />

    <Button
        android:id="@+id/mysecurepaymentrecharge_failresult_failbtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/start_round_sel"
        android:text="交易失败"
        android:textColor="@color/color_white" />

</RelativeLayout>