<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line" >

    <LinearLayout
        android:id="@+id/traceroute_rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_break_line"
        android:clickable="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_up" >

            <Button
                android:id="@+id/lvshenqing_imgback"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:background="@drawable/btn_general_back"
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="立即申请"
                android:textColor="@android:color/white"
                android:textSize="21sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_group_break_line"
            android:paddingBottom="10dip"
            android:paddingLeft="15dip"
            android:paddingTop="10dip"
            android:text="产品信息"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dip"
            android:paddingTop="15dip" >

            <TextView
                android:id="@+id/lvshenqing_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dip"
                android:text="产品名称"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/lvshenqing_productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_toRightOf="@id/lvshenqing_tv1"
                android:text="北京-韩国6天4晚自由行"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/my_group_break_line" />
        <!-- 2 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dip"
            android:paddingTop="15dip" >

            <TextView
                android:id="@+id/lvshenqing_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dip"
                android:text="产品价格"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/lvshenqing_productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_toRightOf="@id/lvshenqing_tv2"
                android:text="¥520 x12期"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/my_group_break_line" />
        <!-- 3 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_group_break_line"
            android:paddingBottom="10dip"
            android:paddingLeft="15dip"
            android:paddingTop="10dip"
            android:text="个人信息"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingTop="8dip" >

            <TextView
                android:id="@+id/lvshenqing_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="38dip"
                android:paddingTop="10dip"
                android:text="姓 名"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/lvshenqing_nameedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_toRightOf="@id/lvshenqing_tv3"
                android:background="@null"
                android:gravity="left"
                android:inputType="text"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingBottom="10dip"
                android:paddingRight="40dip"
                android:paddingTop="10dip"
                android:text="张三"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/my_group_break_line" />

        <!-- 5 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingTop="8dip" >

            <TextView
                android:id="@+id/lvshenqing_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingTop="10dip"
                android:text="身份证号"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/lvshenqing_numedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_toRightOf="@id/lvshenqing_tv4"
                android:background="@null"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                android:gravity="left"
                android:maxLength="18"
                android:maxLines="1"
                android:paddingBottom="10dip"
                android:paddingRight="40dip"
                android:paddingTop="10dip"
                android:text="110345199001229887"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/my_group_break_line" />

        <!-- 6 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingTop="8dip" >

            <TextView
                android:id="@+id/lvshenqing_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingTop="10dip"
                android:text="手机号码"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/lvshenqing_mobileedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_toRightOf="@id/lvshenqing_tv5"
                android:background="@null"
                android:gravity="left"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingBottom="10dip"
                android:paddingRight="40dip"
                android:paddingTop="10dip"
                android:text="18900118899"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/my_group_break_line" />

        <!-- 7 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingTop="8dip" >

            <TextView
                android:id="@+id/lvshenqing_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="38dip"
                android:paddingTop="10dip"
                android:text="邮箱"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/lvshenqing_mailedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_toRightOf="@id/lvshenqing_tv6"
                android:background="@null"
                android:gravity="left"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingBottom="10dip"
                android:paddingRight="40dip"
                android:paddingTop="10dip"
                android:text="18900118899@126.com"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/my_group_break_line" />

        <!-- 8 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingTop="8dip" >

            <TextView
                android:id="@+id/lvshenqing_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="15dip"
                android:paddingTop="10dip"
                android:text="工作单位"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/lvshenqing_worknameedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_toRightOf="@id/lvshenqing_tv7"
                android:background="@null"
                android:gravity="left"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="10dip"
                android:paddingRight="40dip"
                android:paddingTop="10dip"
                android:text="华信科技(北京)信息技术有限公司"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/my_group_break_line" />

        <CheckBox
            android:id="@+id/lvshenqing_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:checked="true"
            android:text="同意《小信用旅游产品服务协议》"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/lvshenqing_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/start_round_sel"
            android:gravity="center"
            android:text="立即申请"
            android:textColor="@color/color_selector_break" />
    </LinearLayout>

</ScrollView>