<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

    <RadioGroup
        android:id="@+id/main_mRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up"
        android:orientation="horizontal" 
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        >

        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/home_radionbutton_background"
            android:gravity="center"
            android:text="推荐"
            android:drawablePadding="2dip"
            android:textColor="@drawable/main_back_image"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_select"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="2dip"
            android:gravity="center"
            android:text="信用"
             android:drawableTop="@drawable/home_radionbutton_background2"
            android:textColor="@drawable/main_back_image"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_financial"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:drawablePadding="2dip"
            android:text="发现"
             android:drawableTop="@drawable/home_radionbutton_background3"
            android:textColor="@drawable/main_back_image"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/main_personal"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:drawablePadding="2dip"
             android:drawableTop="@drawable/home_radionbutton_background4"
            android:text="我的"
            android:textColor="@drawable/main_back_image"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>