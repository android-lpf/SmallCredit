<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_beijingse"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_title" >

        <Button
            android:id="@+id/register_shouquan_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="授权"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud_beijingse" >

        <ImageView
            android:id="@+id/register_shouquan_lunbo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/senond_main_lunbo" />

        <ImageView
            android:id="@+id/register_shouquan_line1"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_below="@id/register_shouquan_lunbo"
            android:background="@drawable/my_break_line" />

        <TextView
            android:id="@+id/register_shouquan_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_shouquan_line1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="1dp"
            android:maxLines="4"
            android:text="\t1，小信用是一家整合信用记录，提高全民信用意识的移动应用。查询信用分，需要授权小信用将您的姓名和身份证传递至中智诚征信有限公司，中智诚信用有限公司，考拉征信服务有限公司。"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/register_shouquan_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_shouquan_text1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="1dp"
            android:maxLines="4"
            android:text="\t2，授权小信用向征信机构查询您的信用分和相关信用信息，以评估其与你之间的交易和服务条件，该等授权仅一次有效，下次更新查询还需要征得您的授权。"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/register_shouquan_line2"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_below="@id/register_shouquan_text2"
            android:layout_marginBottom="20dp"
            android:background="@drawable/my_break_line" />

        <Button
            android:id="@+id/register_shouquan_shouquanbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/register_shouquan_line2"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_huang_order"
            android:text="授权"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>