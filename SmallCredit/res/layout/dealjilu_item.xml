<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5" >

        <TextView
            android:id="@+id/dealjilu_item_currentmouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="本月"
            android:textColor="#666666"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/dealjilu_item_rotateto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="10dp"
            android:text="存钱罐"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dealjilu_item_rotateto_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/dealjilu_item_rotateto"
            android:layout_alignBottom="@id/dealjilu_item_rotateto"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="6dp"
            android:paddingTop="10dp"
            android:text="+200.00"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dealjilu_item_rotateto_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/dealjilu_item_rotateto"
            android:layout_below="@id/dealjilu_item_rotateto_price"
            android:layout_marginBottom="3dp"
            android:text="今天"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dealjilu_item_rotateto_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/dealjilu_item_rotateto_price"
            android:layout_below="@id/dealjilu_item_rotateto_price"
            android:layout_marginBottom="3dp"
            android:text="交易成功"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/dealjilu_item_rotateto_data"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E4E4E4" />

        <TextView
            android:id="@+id/dealjilu_item_rotateout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageView1"
            android:layout_below="@id/imageView1"
            android:layout_marginBottom="3dp"
            android:text="存钱罐"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dealjilu_item_rotateout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/imageView1"
            android:layout_below="@id/imageView1"
            android:text="+100.00"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dealjilu_item_rotateout_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/dealjilu_item_rotateout_price"
            android:layout_below="@id/dealjilu_item_rotateout"
            android:layout_marginBottom="3dp"
            android:text="交易成功"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dealjilu_item_rotateout_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/dealjilu_item_rotateout_state"
            android:layout_alignBottom="@id/dealjilu_item_rotateout_state"
            android:layout_alignLeft="@+id/dealjilu_item_rotateout"
            android:layout_marginBottom="3dp"
            android:text="02-01"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/dealjilu_item_rotateout_state"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E4E4E4" />

        <TextView
            android:id="@+id/dealjilu_item_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/dealjilu_item_rotateout_data"
            android:layout_below="@id/imageView2"
            android:layout_marginBottom="3dp"
            android:text="购买"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dealjilu_item_buy_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/dealjilu_item_buy"
            android:layout_below="@id/dealjilu_item_buy"
            android:text="02-01"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dealjilu_item_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/imageView2"
            android:layout_below="@id/imageView2"
            android:text="+100.00"
            android:textColor="#333333"
            android:textSize="14sp" 
            android:layout_marginBottom="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/dealjilu_item_buy_price"
            android:layout_below="@id/dealjilu_item_buy_price"
            android:text="交易失败"
            android:textColor="#333333"
            android:textSize="14sp"
            android:id="@+id/dealjilu_item_buy_state"
             />

    </RelativeLayout>

</LinearLayout>