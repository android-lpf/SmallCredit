<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/suggestion_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_group_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/suggestion_imgback"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:padding="10dip" />
   <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:id="@+id/suggestion_backtext"
    android:layout_marginLeft="32dip"
    android:layout_centerVertical="true"
    android:textColor="@android:color/white"
    /> 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="建议反馈"
            android:textColor="@android:color/white"
            android:textSize="21sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_group_break_line"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/traceroute_rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_group_break_line"
            android:clickable="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <EditText
                    android:id="@+id/suggestion_ed1"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/btn_white_zhijiaobiankuang"
                    android:gravity="top|left"
                    android:maxLength="100"
                    android:cursorVisible="true"
                    android:paddingLeft="10dip"
                    android:paddingTop="3dp"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/suggestion_img"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_alignLeft="@id/suggestion_ed1"
                    android:layout_below="@id/suggestion_ed1"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/jia"
                     />

                <ImageView
                    android:id="@+id/suggestion_imageview"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_alignTop="@id/suggestion_img"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@id/suggestion_img" />

                <TextView
                    android:id="@+id/suggestion_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/suggestion_imageview"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="5dip"
                    android:text="还能输入100字"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <Button
                android:id="@+id/suggestion_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|bottom"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="190dp"
                android:layout_weight="1"
                android:background="@drawable/start_round_sel"
                android:text="提交"
                android:textColor="@color/color_selector_break" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>