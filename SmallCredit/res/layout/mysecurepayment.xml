<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mysecurepayment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line"
    android:fadingEdge="none"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_break_line"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_up" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="无忧还款"
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mysecurepayment_backtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="29dip"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/mysecurepayment_backbtn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:background="@drawable/btn_general_back"
                android:padding="10dp" />

            <!--
                 <Button
                android:id="@+id/mysecurepayment_wen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/wenhao" />
            -->
        </RelativeLayout>

        <TextView
            android:id="@+id/mysecurepayment_line1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/relativeLayout1"
            android:background="@drawable/my_group_break_line" />

        <RelativeLayout
            android:id="@+id/mysecurepayment_payplan_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mysecurepayment_line1"
            android:background="@drawable/my_break_line" >

            <ImageView
                style="@style/my_set_front_imageview"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/mysecurepayment_payplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/bullet_navi_current"
                android:drawablePadding="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="还款计划"
                android:textColor="@color/color_white"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mysecurepayment_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mysecurepayment_payplan_relative"
            android:background="@drawable/my_group_break_line" />

        <RelativeLayout
            android:id="@+id/mysecurepayment_dealjilu_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mysecurepayment_line2"
            android:background="@drawable/my_break_line" >

            <TextView
                android:id="@+id/mysecurepayment_dealjilu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/bullet_navi_current"
                android:drawablePadding="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="资金记录"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img1"
                style="@style/my_set_front_imageview"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mysecurepayment_line3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/mysecurepayment_dealjilu_relative"
            android:background="@drawable/my_group_break_line" />

        <TextView
            android:id="@+id/mysecurepayment_accountyu_etxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/mysecurepayment_line3"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="账户余额"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mysecurepayment_accountyu_eprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mysecurepayment_accountyu_etxt"
            android:layout_alignBottom="@id/mysecurepayment_accountyu_etxt"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="0,0000.00"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mysecurepayment_accountyu_eprice"
            android:background="@drawable/my_group_break_line" />

        <TextView
            android:id="@+id/mysecurepayment_shouyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/mysecurepayment_accountyu_etxt"
            android:layout_below="@id/textView2"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="近七日年化收益"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mysecurepayment_shouyi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mysecurepayment_shouyi"
            android:layout_alignBottom="@id/mysecurepayment_shouyi"
            android:layout_alignLeft="@id/mysecurepayment_accountyu_eprice"
            android:text="0.000"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mysecurepayment_accountyu_eprice"
            android:layout_alignBottom="@id/mysecurepayment_accountyu_eprice"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="元"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mysecurepayment_shouyi_price"
            android:layout_alignBottom="@id/mysecurepayment_shouyi_price"
            android:layout_alignLeft="@id/textView1"
            android:text="%"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mysecurepayment_shouyi"
            android:background="@drawable/my_group_break_line" />

        <TextView
            android:id="@+id/mysecurepayment_haveshouyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/mysecurepayment_shouyi"
            android:layout_below="@id/textView3"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="已获收益"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mysecurepayment_haveshouyiprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mysecurepayment_haveshouyi"
            android:layout_alignBottom="@id/mysecurepayment_haveshouyi"
            android:layout_alignLeft="@id/mysecurepayment_shouyi_price"
            android:text="00.00"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mysecurepayment_haveshouyiprice"
            android:layout_alignBottom="@id/mysecurepayment_haveshouyiprice"
            android:layout_alignLeft="@id/textView4"
            android:text="元"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/mysecurepayment_line4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/textView6"
            android:background="@drawable/my_group_break_line" />

        <RelativeLayout
            android:id="@+id/mysecurepayment_recharge_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mysecurepayment_line4"
            android:background="@drawable/my_break_line" >

            <TextView
                android:id="@+id/mysecurepayment_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/bullet_navi_current"
                android:drawablePadding="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="银行卡管理"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

            <ImageView
                style="@style/my_set_front_imageview"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mysecurepayment_recharge_relative"
            android:background="@drawable/my_group_break_line" />

        <RelativeLayout
            android:id="@+id/mysecurepayment_deposit_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:background="@drawable/my_break_line" >

            <TextView
                android:id="@+id/mysecurepayment_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/bullet_navi_current"
                android:drawablePadding="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="提现"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

            <ImageView
                style="@style/my_set_front_imageview"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>