<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/my_myinformation_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/btn_general_back" />

	   <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="12sp"
	    android:id="@+id/my_myinfomation_backtext"
	    android:layout_marginLeft="29dip"
	    android:layout_centerVertical="true"
	    android:textColor="@android:color/white"
	    />  
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="我的资料"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_group_break_line" >

        <TextView
            android:id="@+id/my_myinformation_nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="真实姓名"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_myinformation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@id/my_myinformation_nametxt"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="*三"
            android:textColor="@color/color_blackgray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/my_myinformation_line1"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_below="@id/my_myinformation_nametxt"
            android:background="@drawable/my_break_line" />

        <TextView
            android:id="@+id/my_myinformation_sextxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_myinformation_nametxt"
            android:layout_below="@id/my_myinformation_line1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="性\t\t别"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_myinformation_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_myinformation_name"
            android:layout_below="@id/my_myinformation_line1"
            android:layout_toRightOf="@id/my_myinformation_sextxt"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="男"
            android:textColor="@color/color_blackgray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/my_myinformation_line2"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_below="@id/my_myinformation_sextxt"
            android:background="@drawable/my_break_line" />

        <TextView
            android:id="@+id/my_myinformation_datatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_myinformation_sextxt"
            android:layout_below="@id/my_myinformation_line2"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="出生日期"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_myinformation_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_myinformation_sex"
            android:layout_below="@id/my_myinformation_line2"
            android:layout_toRightOf="@id/my_myinformation_datatxt"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="1990-10-12"
            android:textColor="@color/color_blackgray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/my_myinformation_line3"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_below="@id/my_myinformation_datatxt"
            android:background="@drawable/my_break_line" />

        <TextView
            android:id="@+id/my_myinformation_shenfennumbertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_myinformation_datatxt"
            android:layout_below="@id/my_myinformation_line3"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="身份证号"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_myinformation_shenfennumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_myinformation_data"
            android:layout_below="@id/my_myinformation_line3"
            android:layout_toRightOf="@id/my_myinformation_shenfennumbertxt"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="110************231"
            android:textColor="@color/color_blackgray"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>