<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register_er_id"
    android:background="@color/backgroud_beijingse"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_title" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </RelativeLayout>

        <ImageView
            android:id="@+id/register_er_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/register_er" />

        <RelativeLayout
            android:id="@+id/register_er_real1"
            android:layout_width="match_parent"
            android:layout_height="53dip"
            android:background="#ffffff"
           >
              <TextView 
                   android:layout_width="match_parent"
                   android:layout_height="1dip"
                   android:background="#DEDEDE"
                   />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="手机号"
                android:id="@+id/register_er_t2v"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_er_phonenumber_edit"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="5dip"
                android:maxLines="1"
                android:layout_toRightOf="@id/register_er_t2v"
                android:gravity="center|left"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />
        </RelativeLayout>
			<TextView 
              android:layout_width="match_parent"
              android:layout_height="1dip"
              android:background="#DEDEDE"
                android:layout_marginBottom="10dp"
              />
        <RelativeLayout
            android:id="@+id/register_er_real2"
            android:layout_width="match_parent"
            android:layout_height="53dip"
            android:background="#ffffff"
            >
<TextView 
              android:layout_width="match_parent"
              android:layout_height="1dip"
              android:background="#DEDEDE"
                android:layout_marginBottom="10dp"
              />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="53dip"
                android:layout_marginLeft="10dp"
                android:text="验证码"
                android:gravity="center"
                android:id="@+id/register_er_t1v"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_er_verify_edit"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:ems="10"
                android:gravity="center|left"
                android:paddingLeft="5dip"
                android:layout_toRightOf="@id/register_er_t1v"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />
             <TextView 
                android:layout_toRightOf="@id/register_er_verify_edit"
                   android:layout_width="1dip"
                   android:layout_height="53dip"
                   android:background="#DEDEDE"
                   android:id="@+id/register_er_t4v"
                   />
            <com.geo.smallcredit.vo.TimeButton
                android:id="@+id/register_er_sendverifybtn"
                android:layout_width="match_parent"
                android:layout_height="53dip"
                android:layout_toRightOf="@id/register_er_t4v"
                android:background="@null"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="@color/orange"
                android:textSize="15sp"
                />
        </RelativeLayout>
        <TextView 
              android:layout_width="match_parent"
              android:layout_height="1dip"
              android:layout_marginBottom="10dip"
              android:background="#DEDEDE"
              />
        <RelativeLayout
            android:id="@+id/register_er_real3"
            android:layout_width="match_parent"
            android:layout_height="53dip"
            android:background="#ffffff"
             >
       <TextView 
              android:layout_width="match_parent"
              android:layout_height="1dip"
              android:background="#DEDEDE"
              />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="密码"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/register_er_userpwd_edit"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@drawable/btn_white_zhijiaobiankuang"
                android:hint="组合字母，数字或符号"
                android:maxLength="20"
                android:maxLines="1"
               android:digits="0123456789QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuioplkjhgfdsazxcvbnm"
                android:paddingLeft="65dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <Button
                android:id="@+id/register_er_eyebtn"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/eye_btn"
                 />
        </RelativeLayout>
         <TextView 
              android:layout_width="match_parent"
              android:layout_height="1dip"
              android:background="#DEDEDE"
              android:layout_marginBottom="40dp"
              />

        <Button
            android:id="@+id/register_er_nextbtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/actionsheet_gray"
            android:text="下一步"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:maxLines="1"
                android:text="轻触上面的按钮,即代表您同意"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/register_er_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="《小信用用户服务协议》"
                android:textColor="@color/orange"
                android:textSize="14sp" />
        </LinearLayout>
    

</LinearLayout>