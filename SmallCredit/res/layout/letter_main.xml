<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/item_host_title"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_up"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/center_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="小信用"
            android:textColor="@color/color_white"
            android:textSize="25sp" >
        </TextView>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/letter_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/main_mRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/letter_main_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_back_image"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="查信用"
            android:textColor="@color/color_miwhite"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/letter_main_jie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_back_image"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="信用借款"
            android:textColor="@color/color_miwhite"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/letter_main_jilu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_back_image"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="查询记录"
            android:textColor="@color/color_miwhite"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/letter_main_changjing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_back_image"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="场景消费"
            android:textColor="@color/color_miwhite"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>