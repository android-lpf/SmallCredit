<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/second_main_showfen_backgroud"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/yibiaopan_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/zhongzhicheng_yibiaopan" />

        <ImageView
            android:id="@+id/yibiaopan_zhizhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/yibiaopan_img"
            android:layout_alignLeft="@+id/yibiaopan_img"
            android:layout_marginLeft="25dp"
            android:background="@drawable/yibiaopan_zhizhen" />

    </RelativeLayout>

</LinearLayout>