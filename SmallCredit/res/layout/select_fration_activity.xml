<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/select_fration_activity_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/select_fration_activity_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="统一授权"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_fration_activity_rela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/my_group_break_line" >

        <TextView
            android:id="@+id/select_fration_activity_uernametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="姓\t\t名"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/select_fration_activity_uername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/select_fration_activity_uernametxt"
            android:layout_alignBottom="@id/select_fration_activity_uernametxt"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/select_fration_activity_uernametxt"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="张三"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/select_fration_activity_id_numbertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/select_fration_activity_uernametxt"
            android:layout_below="@id/select_fration_activity_uernametxt"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="身份证号"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/select_fration_activity_id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/select_fration_activity_uername"
            android:layout_below="@id/select_fration_activity_uername"
            android:layout_toRightOf="@id/select_fration_activity_id_numbertxt"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="11022***************89x"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/select_fration_activity_phonetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/select_fration_activity_id_numbertxt"
            android:layout_below="@id/select_fration_activity_id_numbertxt"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="手机号码"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/select_fration_activity_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/select_fration_activity_id_number"
            android:layout_below="@id/select_fration_activity_id_number"
            android:layout_toRightOf="@id/select_fration_activity_phonetxt"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="135****9909"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:scrollbarSize="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/my_break_line" >

                <TextView
                    android:id="@+id/selecto_fration_activity_xieyititle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="个人征信查询授权委托书"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/selecto_fration_activity_xieyitxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selecto_fration_activity_xieyititle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:lineSpacingExtra="3dp"
                    android:singleLine="false"
                    android:text="\t\t本人_______（身份证号码：_______）由于个人需要，特向上海亲信互联网金融信息服务有限公司授权："
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/selecto_fration_activity_xieyitxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selecto_fration_activity_xieyitxt1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:lineSpacingExtra="3dp"
                    android:singleLine="false"
                    android:text="\t\t一、向征信机构(包括但不限于中国人民银行个人信用信息基础数据库和经中国人民银行批准设立的征信机构)、银行、财务机构等采集、查询、收集、使用本人的征信信息并获取有关个人信用报告，以及向上述机构报送本人的个人信用信息及信用报告。"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/selecto_fration_activity_xieyitxt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selecto_fration_activity_xieyitxt2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:lineSpacingExtra="3dp"
                    android:singleLine="false"
                    android:text="\t\t二、允许将本人的信用报告相关信息提供给经本人同意的第三方机构使用。上述授权一经做出，不可撤销或变更。特此授权。"
                    android:textColor="@color/white"
                    android:textSize="14sp" >
                </TextView>

                <RelativeLayout
                    android:id="@+id/selecto_rl"
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:layout_below="@id/selecto_fration_activity_xieyitxt3" >

                    <TextView
                        android:id="@+id/selecto_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:text="2015/7/9"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/selecto_fration_activity_xieyidata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/selecto_data"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/selecto_data"
                        android:text="授权日期："
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/selecto_rl1"
                    android:layout_width="match_parent"
                    android:layout_height="25dip"
                    android:layout_below="@id/selecto_rl"
                    android:layout_marginTop="5dip" >

                    <CheckBox
                        android:id="@+id/selecto_fration_activity_checkbox_yi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        android:text="同意"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/selecto_zhong_xieyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/selecto_fration_activity_checkbox_yi"
                        android:text="《中智诚个人征信查询委托协议》"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/selecto_rl2"
                    android:layout_width="match_parent"
                    android:layout_height="25dip"
                    android:layout_below="@id/selecto_rl1"
                    android:layout_marginTop="5dip"
                    android:visibility="gone" >

                    <CheckBox
                        android:id="@+id/selecto_fration_activity_checkbox_er"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        android:text="同意"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/selecto_zhongche_xieyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/selecto_fration_activity_checkbox_er"
                        android:text="《中诚信个人征信查询委托协议》"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dip"
                    android:layout_below="@id/selecto_rl2"
                    android:layout_marginTop="5dip"
                    android:visibility="gone" >

                    <CheckBox
                        android:id="@+id/selecto_fration_activity_checkbox_san"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        android:text="同意"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/selecto_la_xieyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/selecto_fration_activity_checkbox_san"
                        android:text="《考拉征信个人征信查询委托协议》"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/select_fration_activity_nextbtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:background="@drawable/start_round_sel"
        android:text="同意授权"
        android:textColor="@android:color/white" />

</LinearLayout>