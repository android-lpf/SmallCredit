<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="小信用"
        android:textColor="@color/color_white"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dip"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/home_fragment_wuyou2"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:background="@drawable/home_card_backgroud" >

                <ImageView
                    android:id="@+id/home_imgcar1"
                    android:layout_width="100dip"
                    android:layout_height="90dip"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/home_car1_logo" />

                <TextView
                    android:id="@+id/home_fragment_yu_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginTop="30dip"
                    android:layout_toRightOf="@id/home_imgcar1"
                    android:text="查询信用分,与朋友一较高低"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/home_fragment_yu_tv2"
                    android:layout_below="@id/home_fragment_yu_tv2"
                    android:text="账户余额有收益 自动完成还款"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="3dip"
                    android:drawablePadding="15dip"
                    android:drawableRight="@drawable/enter_arrow"
                    android:gravity="center"
                    android:paddingRight="15dip"
                    android:text="立即查看"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <!-- 无忧还款 -->

            <RelativeLayout
                android:id="@+id/home_fragment_wuyou"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:background="@drawable/home_card2_backgroud" >

                <TextView
                    android:id="@+id/home_fragment_yu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="25dip"
                    android:text="定制你的还款计划"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/home_fragment_yu_tv"
                    android:layout_below="@id/home_fragment_yu_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dip"
                    android:text="账户余额有收益 自动完成还款"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
            <!-- 帮你还 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/homefragment_rl3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_card_backgroud" >

                    <TextView
                        android:id="@+id/hmoe_fragment_tv0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_toRightOf="@id/home_textView18"
                        android:gravity="center"
                        android:text="信用生活 等你发现"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/hmoe_fragment_tv0"
                        android:layout_below="@id/hmoe_fragment_tv0"
                        android:gravity="center"
                        android:text="帮你还 /乐分期 /信用借钱/找人问问"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="3dip"
                        android:drawablePadding="15dip"
                        android:drawableRight="@drawable/enter_arrow"
                        android:gravity="center"
                        android:paddingRight="15dip"
                        android:text="了解更多"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 邀请好友 -->

            <RelativeLayout
                android:id="@+id/home_fragment_friend"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:background="@drawable/home_card_lan_backgroud" >

                <TextView
                    android:id="@+id/home_fragment_yu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="25dip"
                    android:text="邀请好友 送奖励"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/home_fragment_yu_tv"
                    android:layout_below="@id/home_fragment_yu_tv"
                    android:text="敬请期待"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/enter_arrow" />
            </RelativeLayout>
            <!-- 5 -->

            <RelativeLayout
                android:id="@+id/homefragment_rl1"
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:background="@drawable/home_card_backgroud" >

                <com.geo.smallcredit.vo.RoundProgressBar
                    android:id="@+id/homefragment_roundProgressBar"
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/home_progress_background" />

                <TextView
                    android:id="@+id/home_fragment_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="25dip"
                    android:layout_toRightOf="@id/homefragment_roundProgressBar"
                    android:gravity="center"
                    android:text="信息认证与信息画像"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/home_fragment_tv1"
                    android:layout_below="@id/home_fragment_tv1"
                    android:gravity="center"
                    android:text="了解你的信用全貌"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dip"
                    android:drawablePadding="15dip"
                    android:drawableRight="@drawable/enter_arrow"
                    android:paddingRight="15dip"
                    android:text="立即认证"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

