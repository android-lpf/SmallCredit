<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/traceroute_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f2"
    android:clickable="true"
    android:orientation="vertical" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:gravity="center"
             android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:background="@color/backgroud_title" 
            android:textColor="@color/color_white"
            android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
        
       
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/findpassword_title2"
                android:layout_gravity="center"
                android:layout_marginTop="20dip"
                />
             
             
          <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dip"
                android:background="#ffffff"
                android:layout_marginTop="20dip"
               >
            <TextView 
                   android:layout_width="match_parent"
                   android:layout_height="1dip"
                   android:background="#DEDEDE"
                   />
                <EditText
                    android:id="@+id/resetpwd_newpwd"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请输入新密码"
                    android:password="true"
                    android:maxLength="18"
                    android:drawablePadding="5dip"
                    android:paddingLeft="15dip"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/lock"
                    android:gravity="center|left"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" >
                </EditText>
                
</RelativeLayout>

          <TextView 
                   android:layout_width="match_parent"
                   android:layout_height="1dip"
                   android:background="#DEDEDE"
                   />
           <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dip"
                android:background="#ffffff"
               >
                <EditText
                    android:id="@+id/resetpwd_newsurepwd"
                    android:layout_width="match_parent"
                    android:layout_height="53dip"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请再次输入新密码"
                    android:maxLength="18"
                      android:drawableLeft="@drawable/lock"
                    android:maxLines="1"
                    android:drawablePadding="5dip"
                    android:paddingLeft="15dip"
                    android:gravity="center|left"
                    android:password="true"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" >
                </EditText>
</RelativeLayout>
                <TextView 
                   android:layout_width="match_parent"
                   android:layout_height="1dip"
                   android:background="#DEDEDE"
                   />
            <Button
                android:id="@+id/resetpwd_surebtn"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dip"
                android:layout_marginRight="10dp"
                android:background="@drawable/backgound_begin_denglu"
                android:text="确 认"
                android:textSize="20dip"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>