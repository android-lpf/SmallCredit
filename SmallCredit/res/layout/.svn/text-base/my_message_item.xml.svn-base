<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_message_real1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buju_order_bian"
        android:visibility="gone" >

        <TextView
            android:id="@+id/my_message_resultnotifition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="1dip"
            android:layout_marginTop="1dip"
            android:background="@drawable/my_group_break_line"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="审批结果通知"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_message_tv1"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@id/my_message_resultnotifition"
            android:background="@drawable/my_group_break_line" />

        <TextView
            android:id="@+id/my_message_notifitiontime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_message_tv1"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2sp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="2015-06-01 10:02:56"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_message_tv2"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_below="@id/my_message_notifitiontime"
            android:background="#2D3039" />

        <TextView
            android:id="@+id/my_message_resultnotification_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_message_notifitiontime"
            android:layout_marginBottom="2sp"
            android:layout_marginRight="3dp"
            android:maxLines="2"
            android:paddingBottom="30dp"
            android:paddingLeft="10dip"
            android:paddingTop="10dp"
            android:text="您于2015年5月30日提交的房贷代还业务申请已审批通过，请尽快【确认】"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_message_real2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buju_order_bian" >

        <TextView
            android:id="@+id/my_message_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无通知"
            android:textColor="@color/white"
            android:textSize="20sp" 
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</LinearLayout>