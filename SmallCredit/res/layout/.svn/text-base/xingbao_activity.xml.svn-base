<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/xingbao_imgback"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="信保代还"
            android:textColor="@android:color/white"
            android:textSize="21sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_break_line"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_break_line"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_break_line"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_group_break_line"
                    android:paddingBottom="8dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="8dip"
                    android:text="产品介绍"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="15dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="15dip"
                    android:text="为您提供1期的平安信保业务代还服务,帮助借款人解决资金周转问题"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingBottom="15dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="15dip"
                    android:text="最高额度 \t\t\t\t 3万元"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingBottom="15dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="15dip"
                    android:text="借款期限 \t\t\t\t 1个月"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingBottom="15dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="15dip"
                    android:text="审核时间 \t\t\t\t 最快1天"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_group_break_line"
                    android:paddingBottom="8dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="8dip"
                    android:text="申请条件"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingBottom="15dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="15dip"
                    android:text="1、借款人年龄在22周岁(含)至55周岁之间"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingBottom="15dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="15dip"
                    android:text="2、平安信保业务用户"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_group_break_line"
                    android:paddingBottom="8dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="8dip"
                    android:text="费用说明"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:paddingBottom="15dip"
                    android:paddingLeft="25dip"
                    android:paddingTop="15dip"
                    android:text="借款成功后将收取一定比例的服务费，此费用含在还款总额中."
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/my_group_break_line" />
            </LinearLayout>

            <Button
                android:id="@+id/xingbao_btn"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="我要申请"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>