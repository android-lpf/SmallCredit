<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomActivity" >

    <ImageView
        android:id="@+id/image_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_guide"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" 
        android:layout_weight="0.5"
        />

    <Button
        android:id="@+id/regist_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_huang_order"
        android:text="注册"
        android:textColor="@color/white" 
        android:layout_weight="0.01"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/login_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_order_huang"
        android:text="登录"
        android:layout_weight="0.01"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/orange"
         />

</LinearLayout>