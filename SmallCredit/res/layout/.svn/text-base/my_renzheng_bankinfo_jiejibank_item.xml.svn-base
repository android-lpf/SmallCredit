<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_renzheng_bankinfo_jieji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_break_line"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="     借记卡"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_break_line" >
	
        <TextView
            android:id="@+id/my_renzheng_bankinfo_jiejibank_item_banknametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="银行"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_renzheng_bankinfo_jiejibank_item_banktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/my_renzheng_bankinfo_jiejibank_item_banknametxt"
            android:layout_alignBottom="@id/my_renzheng_bankinfo_jiejibank_item_banknametxt"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/my_renzheng_bankinfo_jiejibank_item_banknametxt"
            android:text="建设银行"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/my_break_line" >

        <TextView
            android:id="@+id/my_renzheng_bankinfo_jiejibank_item_banknumtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="卡号"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_renzheng_bankinfo_jiejibank_item_banknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/my_renzheng_bankinfo_jiejibank_item_banknumtxt"
            android:layout_alignBottom="@id/my_renzheng_bankinfo_jiejibank_item_banknumtxt"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/my_renzheng_bankinfo_jiejibank_item_banknumtxt"
            android:text="6226 0101 7451 820"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/my_break_line" >

        <TextView
            android:id="@+id/my_renzheng_bankinfo_jiejibank_item_usetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="用途"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_renzheng_bankinfo_jiejibank_item_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/my_renzheng_bankinfo_jiejibank_item_usetxt"
            android:layout_alignBottom="@id/my_renzheng_bankinfo_jiejibank_item_usetxt"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/my_renzheng_bankinfo_jiejibank_item_usetxt"
            android:text="还房贷"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>