<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/third_main_two_item_Line"
     >

    <RelativeLayout
        android:id="@+id/third_main_two_item_real"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/blue_down"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/third_mian_two_imageView"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/third_xin"
            android:gravity="center"
           />

        <TextView
            android:id="@+id/third_main_two_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_alignTop="@id/third_mian_two_imageView"
            android:layout_toRightOf="@id/third_mian_two_imageView"
            android:paddingBottom="10dp"
            android:text="乐分期"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" 
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/third_mian_two_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/third_main_two_item_name"
            android:layout_marginLeft="30dp"
            android:layout_alignBottom="@id/third_mian_two_imageView"
            android:layout_toRightOf="@id/third_mian_two_imageView"
            android:gravity="center_vertical"
            android:text="旅游\t购物\t装修\t住宿"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/third_mian_two_item_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/third_main_two_item_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/enter_arrow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/third_main_two_item_real2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue_up" >
    </RelativeLayout>

</LinearLayout>