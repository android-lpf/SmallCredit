<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#FF3399" >

        <ImageView
            android:id="@+id/bank_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/zhaoshangbank" />

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/bank_img"
            android:text="招商银行"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bank_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bank_name"
            android:layout_below="@id/bank_name"
            android:layout_marginTop="3dp"
            android:text="信用卡"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bank_numberone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/bank_type"
            android:layout_below="@id/bank_type"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:text="****"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/bank_numbertwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/bank_numberone"
            android:layout_alignBottom="@id/bank_numberone"
            android:layout_alignRight="@id/bank_name"
            android:paddingBottom="20dp"
            android:text="****"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/bank_numberthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/bank_numbertwo"
            android:layout_alignBottom="@id/bank_numbertwo"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/bank_numbertwo"
            android:paddingBottom="20dp"
            android:text="****"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/bank_numberfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/bank_numberthree"
            android:layout_alignBottom="@id/bank_numberthree"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/bank_numberthree"
            android:text="5872"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>