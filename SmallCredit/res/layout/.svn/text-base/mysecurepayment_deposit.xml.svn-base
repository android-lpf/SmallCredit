<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/mysecurepayment_deposit_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/mysecurepayment_deposit_backtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dip"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="提现"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_break_line"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/traceroute_rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_break_line"
            android:clickable="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_break_line" >

                <TextView
                    android:id="@+id/mysecurepayment_deposit_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="账户余额"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mysecurepayment_deposit_balanceedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/mysecurepayment_deposit_balance"
                    android:layout_alignBottom="@id/mysecurepayment_deposit_balance"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/mysecurepayment_deposit_balance"
                    android:paddingLeft="8dp"
                    android:text="10，000"
                    android:textColor="@color/color_white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/mysecurepayment_deposit_balanceedit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="元"
                    android:textColor="@color/color_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/mysecurepayment_deposit_balance"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:id="@+id/mysecurepayment_deposit_depositaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_balance"
                    android:layout_below="@id/textView2"
                    android:layout_toLeftOf="@id/mysecurepayment_deposit_balanceedit"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="提现账户"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/mysecurepayment_deposit_depositaccount_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_balanceedit"
                    android:layout_alignTop="@id/mysecurepayment_deposit_depositaccount"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/mysecurepayment_deposit_depositaccount"
                    android:background="@null"
                    android:entries="@array/my_bankinfo_addbank_bankaccount_spinner"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/mysecurepayment_deposit_depositaccount"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/down" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/mysecurepayment_deposit_depositaccount_spinner"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:id="@+id/mysecurepayment_deposit_depositprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_depositaccount"
                    android:layout_below="@id/mysecurepayment_deposit_depositaccount"
                    android:layout_toLeftOf="@id/mysecurepayment_deposit_depositaccount_spinner"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="提现金额"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mysecurepayment_deposit_depositpriceedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@id/mysecurepayment_deposit_depositprice"
                    android:layout_alignBottom="@id/mysecurepayment_deposit_depositprice"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_depositaccount_spinner"
                    android:layout_toRightOf="@id/mysecurepayment_deposit_depositprice"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textColor="@color/color_white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" >
                </EditText>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/mysecurepayment_deposit_depositpriceedit"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:id="@+id/mysecurepayment_deposit_shouxufei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_depositprice"
                    android:layout_below="@id/textView3"
                    android:layout_toLeftOf="@id/mysecurepayment_deposit_depositpriceedit"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="手续费"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mysecurepayment_deposit_shouxufeiedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/mysecurepayment_deposit_shouxufei"
                    android:layout_alignBottom="@id/mysecurepayment_deposit_shouxufei"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_depositpriceedit"
                    android:layout_toRightOf="@id/mysecurepayment_deposit_shouxufei"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textColor="@color/color_white"
                    android:textSize="12sp" >
                </TextView>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/mysecurepayment_deposit_shouxufeiedit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="元"
                    android:textColor="@color/color_white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/mysecurepayment_deposit_shouxufeiedit"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:id="@+id/mysecurepayment_deposit_dealpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_shouxufei"
                    android:layout_alignRight="@id/mysecurepayment_deposit_shouxufei"
                    android:layout_below="@id/mysecurepayment_deposit_shouxufei"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="交易密码"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mysecurepayment_deposit_dealpwdedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@id/mysecurepayment_deposit_dealpwd"
                    android:layout_alignBottom="@id/mysecurepayment_deposit_dealpwd"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_shouxufeiedit"
                    android:layout_toRightOf="@id/mysecurepayment_deposit_dealpwd"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:textColor="@color/color_white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" >
                </EditText>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/mysecurepayment_deposit_dealpwdedit"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_dealpwd"
                    android:layout_below="@id/textView4"
                    android:layout_toLeftOf="@id/mysecurepayment_deposit_dealpwdedit"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="验证码"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mysecurepayment_deposit_verifyedit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignLeft="@id/mysecurepayment_deposit_dealpwdedit"
                    android:layout_below="@id/textView4"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="110dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/textView5"
                    android:background="@drawable/btn_white_zhijiaobiankuang"
                    android:ems="10"
                    android:gravity="left"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:paddingLeft="8dip"
                    android:paddingTop="6dp"
                    android:textColor="@color/color_white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" >
                </EditText>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/textView5"
                    android:background="@drawable/my_group_break_line" />

                <TextView
                    android:id="@+id/mysecurepayment_deposit_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textView5"
                    android:layout_below="@id/textView7"
                    android:layout_toLeftOf="@id/mysecurepayment_deposit_verifyedit"
                    android:paddingBottom="30dp"
                    android:paddingTop="15dp"
                    android:text="温馨提示:"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/mysecurepayment_deposit_depositpriceedit"
                    android:layout_alignBottom="@id/mysecurepayment_deposit_depositpriceedit"
                    android:layout_alignLeft="@id/textView6"
                    android:text="元"
                    android:textColor="@color/color_white"
                    android:textSize="12sp" />

                <com.geo.smallcredit.vo.TimeButton
                    android:id="@+id/mysecurepayment_deposit_sendverifybtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@id/textView5"
                    android:layout_alignBottom="@id/textView5"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="6dp"
                    android:background="@null"
                    android:maxLines="1"
                    android:text="发送验证码"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/mysecurepayment_deposit_submitbtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="120dp"
                android:layout_weight="1"
                android:background="@drawable/start_round_sel"
                android:text="提交"
                android:textColor="@color/color_selector_break"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>