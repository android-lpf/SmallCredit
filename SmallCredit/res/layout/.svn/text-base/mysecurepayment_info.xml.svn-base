<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/mysecurepayment_info_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back" />

        <TextView
            android:id="@+id/mysecurepayment_info_backtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dip"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="无忧还款"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="50dip"
        android:text="让还款变的更简单!"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:drawableLeft="@drawable/checkbox"
        android:drawablePadding="5dip"
        android:paddingLeft="40dip"
        android:paddingTop="5dip"
        android:text="绑定转入卡,资金自动存入无忧还款账户"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:drawableLeft="@drawable/checkbox"
        android:drawablePadding="5dip"
        android:paddingLeft="40dip"
        android:text="绑定转入卡,到还款时间,自动完成还款"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:drawableLeft="@drawable/checkbox"
        android:drawablePadding="5dip"
        android:paddingLeft="40dip"
        android:text="无忧还款账户中的资金每天还能有收益"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true" >

            <RelativeLayout
                android:id="@+id/mysecurepayment_info_relative"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:layout_marginBottom="10dip"
                android:paddingLeft="30dip" >

                <CheckBox
                    android:id="@+id/mysecurepayment_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:text="同意"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/mysecurepayment_info_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/mysecurepayment_checkbox"
                    android:text="《小信用自动还款服务协议》"
                    android:textColor="@color/actionsheet_blue"
                    android:textSize="12sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/mysecurepayment_info_kaitongbtn"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_below="@id/mysecurepayment_info_relative"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:background="@drawable/start_round_sel"
                android:text="立即开通"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mysecurepayment_info_kaitongbtn"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:paddingLeft="40dip"
                android:text="注:无忧还款目前只支持借记卡还款,不支持信用卡"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>