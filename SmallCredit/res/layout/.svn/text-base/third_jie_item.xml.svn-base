<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/third_jie_item_rela1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dip"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/third_jie_item_title_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_up" >

        <TextView
            android:id="@+id/third_jie_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="\t小信用为您推荐"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/third_jie_item_rela3"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/third_jie_item_title_real"
        android:background="@color/blue_down" 
        android:layout_marginBottom="6dp"
        >

        <ImageView
            android:id="@+id/third_jie_item_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="20dip"
            android:background="@drawable/third_jie_xiaoxinyong"
            android:paddingBottom="5dip" />

        <TextView
            android:id="@+id/third_jie_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/third_jie_item_imageview"
            android:layout_toRightOf="@id/third_jie_item_imageview"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="呼哧旅行"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/third_jie_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/third_jie_item_imageview"
            android:layout_below="@id/third_jie_item_name"
            android:layout_toRightOf="@id/third_jie_item_imageview"
            android:text="您的环球旅行支票"
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/third_jie_item_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/enter_arrow" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/third_jie_item_showimg"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/zhitong" />

</RelativeLayout>