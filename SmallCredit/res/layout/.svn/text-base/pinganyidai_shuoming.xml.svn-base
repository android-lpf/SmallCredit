<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/pinganyidai_backbtn"
            android:layout_width="80dip"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/btn_general_back" />

        
        <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:id="@+id/pinganyidai_backtext"
    android:layout_marginLeft="32dip"
    android:layout_centerVertical="true"
    android:textColor="@android:color/white"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="温馨提示"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:lineSpacingExtra="2dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="\t\t您即将访问的链接地址由平安易贷提供，小信用仅作为产品推荐通道不会介入到实际业务中，如果您在访问平安易贷网站过程中有任何疑问，请与平安易贷网站运营商及时联系并解决，在此过程中小信用不承担任何责任与义务。"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:lineSpacingExtra="2dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="\t\t小信用建议您，在访问对方网站过程中如需注册、登录以及办理业务等操作请仔细阅读对方提供的相关服务协议。"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/pinganyidai_nextnow_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="60dip"
        android:background="@drawable/start_round_sel"
        android:paddingBottom="15dip"
        android:paddingTop="15dip"
        android:text="我知道了"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>