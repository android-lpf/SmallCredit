<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_host_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up"
        android:focusableInTouchMode="true" >

        <Button
            android:id="@+id/shenfen_btn_back_do"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp" />

        <TextView
            android:id="@+id/center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="身份信息"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_break_line"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/traceroute_rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_break_line"
            android:clickable="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_group_break_line"
                android:paddingBottom="15dip"
                android:paddingTop="15dip" >

                <TextView
                    android:id="@+id/shenfen_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="45dp"
                    android:text="姓名"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/shenfen_info_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/shenfen_info_name"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请输入姓名"
                    android:inputType="text"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColor="@color/color_white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_group_break_line"
                android:paddingBottom="15dip"
                android:paddingTop="15dip" >

                <TextView
                    android:id="@+id/shenfen_info_shenfennum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="身份证号"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/shenfen_info_shenfennum_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/shenfen_info_shenfennum"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请输入身份证号"
                    android:inputType="number"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:textColor="@color/color_white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" >
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_group_break_line"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/shenfen_info_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="手机号码"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/shenfen_info_mobile_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/shenfen_info_mobile"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="@color/color_white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" >
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_group_break_line"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/shenfen_info_higheducation "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="最高学历"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

              <Spinner
                  android:id="@+id/shenfen_info_higheducation_spinner"
                  style="@android:attr/spinnerItemStyle"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_marginLeft="6dp"
                  android:layout_toRightOf="@id/shenfen_info_higheducation "
                  android:entries="@array/shenfen_info_higheducation_spinner"
                  android:textColorHint="@android:color/darker_gray"
                  android:textCursorDrawable="@null"
                  android:textSize="12sp" 
                  android:background="@null"
                  />

 				<ImageView
 				    android:layout_width="15dp"
 				    android:layout_height="15dp"
 				    android:layout_alignBottom="@id/shenfen_info_higheducation "
 				    android:layout_alignParentRight="true"
 				    android:background="@drawable/down" 
 				    android:layout_centerVertical="true"
 				    android:layout_marginRight="10dp"
 				    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_group_break_line"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/shenfen_info_marry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="婚姻状况"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/shenfen_info_marry_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/shenfen_info_marry"
                    android:entries="@array/shenfen_info_marry_spinner"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" 
                    android:background="@null"
                    />
                <ImageView 
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:id="@+id/shenfen_address"
                android:background="@drawable/my_group_break_line"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/shenfen_info_liveaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="居住地址"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/shenfen_info_liveaddresstxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="9dip"
                    android:layout_toRightOf="@id/shenfen_info_liveaddress"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />
                <ImageView 
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/down"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_group_break_line"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" >

                <TextView
                    android:id="@+id/shenfen_info_liveinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="居住详址"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/shenfen_info_liveinfo_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/shenfen_info_liveinfo"
                    android:background="@null"
                    android:ems="10"
                    android:hint="请输入居住详址"
                    android:textColor="@color/color_white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" >
                </EditText>
            </RelativeLayout>

            <Button
                android:id="@+id/shenfen_info_savebtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/start_round_sel"
                android:text="保 存"
                android:textColor="@color/color_selector_break" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>