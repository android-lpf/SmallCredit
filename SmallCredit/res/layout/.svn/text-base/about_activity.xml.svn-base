<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="@drawable/my_group_break_line"
    >
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

         <Button 
             android:id="@+id/about_imgback"
             android:layout_width="wrap_content"
             android:layout_height="25dp"
             android:background="@drawable/btn_general_back"
             android:padding="10dip"
             android:layout_marginLeft="4dp"
             android:layout_centerVertical="true"
             />
            <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:id="@+id/about_backtext"
    android:layout_marginLeft="32dip"
    android:layout_centerVertical="true"
    android:textColor="@android:color/white"
    /> 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="关于小信用"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

    </RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    >
     <ImageView 
         
         android:layout_width="150dip"
         android:layout_height="120dip"
         android:src="@drawable/xiaoxingyong_log"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="15dip"
         android:layout_marginBottom="15dip"
         />
     </RelativeLayout>
     
<TextView 
    android:id="@+id/about_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dip"
    android:layout_marginRight="50dip"
    android:padding="5dip"
    android:layout_marginTop="5dp"
    android:textColor="@android:color/white"
    android:text="\t小信用 \t是Sina互联网金融板块的信用服务商.它是基于互联网,携手个人征信公司、大数据公司和多家金融机构,向消费者提供信用和金融管理服务的平台.我们希望打造一个小而美的移动信用联邦.与征信机构、互联网保险公司、消费金融公司、P2P共同打造一个开放的信用平台,我们深信 \t信用即财富.移动互联网及大数据的应用会对中国的消费金融服务带来前所未有的颠覆."
    android:lineSpacingExtra="5dp"
    />
</LinearLayout>
