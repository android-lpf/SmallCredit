<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2229"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_host_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_up"
        android:focusableInTouchMode="true" >

        <Button
            android:id="@+id/person_renzheng_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_general_back"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:layout_marginLeft="6dp"
             />

        <TextView
            android:id="@+id/center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="我的认证"
            android:textColor="@color/color_white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_rela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D2027" 
        android:visibility="gone"
        >

        <com.geo.smallcredit.vo.RoundProgressBar
            android:id="@+id/person_roundProgressBar"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/person"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="@string/main_high"
            android:textColor="@color/color_white"
            android:textSize="12dp" 
            android:layout_marginRight="30dp"
            />

        <TextView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/high"
            android:layout_alignTop="@id/person_roundProgressBar"
            android:layout_marginTop="10dp"
            android:text="@string/main_person"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/person_renzheng_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1F2229" 
        >
    </ListView>

</LinearLayout>