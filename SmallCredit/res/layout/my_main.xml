<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:background="#f1f2f2"
    android:orientation="vertical"
     >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="我的"
            android:background="@color/backgroud_title"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
   

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f2f2" 
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/my_main_loginregister_realtive"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:background="#000023"
                    android:orientation="horizontal" >
					 <com.geo.smallcredit.util.CircularImage 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:src="@drawable/add"
					    android:layout_centerHorizontal="true"
					    android:layout_centerVertical="true"
					    /> 
				<ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_white_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    />
                </RelativeLayout>
              <RelativeLayout 
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:id="@+id/my_main_rl1"
                  android:layout_marginTop="20dip"
                  >
                  <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#DEDEDE" />
                  <TextView 
                      android:layout_width="wrap_content"
                      android:layout_height="53dip"
                      android:text="我的信用"
                      android:textSize="15sp"
                      android:gravity="center|left"
                      android:layout_marginLeft="10dip"
                      android:drawablePadding="5dip"
                      android:drawableLeft="@drawable/imported"
                      />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    />
              </RelativeLayout>
                 <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_marginLeft="20dip"
                        android:background="#DEDEDE" />
                 
                 <!--  -->
                 
                <RelativeLayout 
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:id="@+id/my_main_rl2"
                  >
                  <TextView 
                      android:layout_width="wrap_content"
                      android:layout_height="53dip"
                      android:text="我的专属"
                      android:textSize="15sp"
                      android:gravity="center|left"
                      android:layout_marginLeft="10dip"
                      android:drawablePadding="5dip"
                      android:drawableLeft="@drawable/person_2_car"
                      />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:src="@drawable/back_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    />
              </RelativeLayout> 
               <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#DEDEDE" />  
                 
                 
                 
               <!--  --> 
               <RelativeLayout 
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:layout_marginTop="25dip"
                  android:id="@+id/my_main_rl3"
                  >
                  <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#DEDEDE" />
                  <TextView 
                      android:layout_width="wrap_content"
                      android:layout_height="53dip"
                      android:text="邀请好友"
                      android:textSize="15sp"
                      android:gravity="center|left"
                      android:layout_marginLeft="10dip"
                      android:drawablePadding="5dip"
                      android:drawableLeft="@drawable/person_3_car"
                      />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:src="@drawable/back_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    />
              </RelativeLayout>
              <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#DEDEDE" /> 
               
               <!--  -->
               
               <RelativeLayout 
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:layout_marginTop="25dip"
                  android:id="@+id/my_main_rl4"
                  >
                  <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#DEDEDE" />
                  <TextView 
                      android:layout_width="wrap_content"
                      android:layout_height="53dip"
                      android:text="设置"
                      android:textSize="15sp"
                      android:gravity="center|left"
                      android:layout_marginLeft="10dip"
                      android:drawablePadding="5dip"
                      android:drawableLeft="@drawable/person_4_car"
                      />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_gray_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    />
              </RelativeLayout>
              <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#DEDEDE" /> 
        </LinearLayout>
    </ScrollView>

</LinearLayout>