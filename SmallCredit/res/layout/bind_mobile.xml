<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bind_mobile_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_host_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up"
        android:focusableInTouchMode="true" >

        <Button
            android:id="@+id/btn_sure_back_do"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/btn_general_back"
            android:gravity="center_vertical|center_horizontal" >
        </Button>

        <TextView
            android:id="@+id/center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="短信验证"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bind_mobile_line1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/item_host_title"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bind_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="请输入 "
            android:textColor="@color/color_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bind_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="186******"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/duanxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="收到的短信验证码"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/btn_sure_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/button_box_order_shape_white"
        android:gravity="left"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        android:paddingBottom="15dip"
        android:paddingLeft="20dip"
        android:paddingTop="15dip"
        android:textColor="@color/color_white"
        android:textColorHint="@android:color/darker_gray"
        android:textCursorDrawable="@null"
        android:textSize="12sp" />

    <com.geo.smallcredit.vo.TimeButton
        android:id="@+id/btn_sure_phonenum"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:background="@drawable/button_box_order_shape_white"
        android:text="发送验证码"
        android:textColor="#FFFAFA"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_sure_submit"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dip"
        android:background="@drawable/start_round_sel"
        android:text="下一步"
        android:textColor="@color/color_white"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/bind_mobile_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminateDrawable="@drawable/progressbar"
        android:max="200"
        android:progress="0"
        android:visibility="gone" />

</LinearLayout>