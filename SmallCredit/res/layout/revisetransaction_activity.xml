<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_group_break_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/revise_transaction_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_up" >

        <Button
            android:id="@+id/revise_transaction_imgback"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/btn_general_back"
            android:padding="10dip" />
      <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:id="@+id/revise_transaction_backtext"
    android:layout_marginLeft="32dip"
    android:layout_centerVertical="true"
    android:textColor="@android:color/white"
    /> 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="修改交易密码"
            android:textColor="@android:color/white"
            android:textSize="21sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_group_break_line"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/revise_transaction_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_group_break_line"
            android:orientation="vertical" 
            android:clickable="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/revise_transaction_paw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:digits="1234567890zxcvbnmlkjhgfdsaqwertyuiop"
                    android:hint="原交易密码"
                    android:maxLength="12"
                    android:paddingBottom="15dip"
                    android:paddingLeft="10dip"
                    android:paddingTop="15dip"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/revise_transaction_paw"
                    android:background="@drawable/my_break_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/revise_transaction_newpaw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:digits="1234567890zxcvbnmlkjhgfdsaqwertyuiop"
                    android:hint="新交易密码"
                    android:maxLength="12"
                    android:paddingBottom="15dip"
                    android:paddingLeft="10dip"
                    android:paddingTop="15dip"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/revise_transaction_newpaw"
                    android:background="@drawable/my_break_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <EditText
                    android:id="@+id/revise_transaction_repaw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:digits="1234567890zxcvbnmlkjhgfdsaqwertyuiop"
                    android:hint="新密码确认"
                    android:maxLength="12"
                    android:paddingBottom="15dip"
                    android:paddingLeft="10dip"
                    android:paddingTop="15dip"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/revise_transaction_repaw"
                    android:background="@drawable/my_break_line" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/revise_transaction_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip"
                android:checked="true"
                android:text="显示密码"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/revise_transaction_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|bottom"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="190dp"
                android:layout_weight="1"
                android:background="@drawable/start_round_sel"
                android:text="保存"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>